<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="20dp">

    <TextView
        android:id="@+id/abc"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/acc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="FullName"
        android:textColor="@color/black"
        android:textSize="30dp" />



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter ur fullname"
        android:textSize="20dp"
        android:paddingVertical="10dp"
        android:id="@+id/edit1"
       android:paddingHorizontal="10dp"
        android:inputType="text"
        android:background="@drawable/editview"
       />

    <TextView
        android:id="@+id/text1"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/acc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Address"
        android:textColor="@color/black"
        android:textSize="30dp" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter ur address"
        android:inputType="text"
        android:textSize="20dp"
        android:id="@+id/edit2"
        android:background="@drawable/editview"
        android:layout_marginTop="15dp"
        android:paddingVertical="10dp"
        android:paddingHorizontal="10dp"/>

    <TextView
        android:id="@+id/text2"
        android:layout_below="@+id/acc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:text="Email"
        android:textSize="30dp"/>


    <EditText
        android:id="@+id/edit3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/editview"
        android:hint="Enter ur email"
        android:textSize="20dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:layout_marginTop="15dp"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/pass"
        android:layout_below="@+id/acc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:text="Password"
        android:textSize="30dp"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter ur password"
        android:textSize="20dp"
        android:id="@+id/edit4"
        android:background="@drawable/editview"
        android:inputType="textPassword"
        android:paddingVertical="10dp"
        android:paddingHorizontal="10dp"
        android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/lbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/pink"
        android:padding="10dp"
        android:layout_gravity="center_horizontal"
        android:text="signup"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/text3"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lbtn"
        android:text="Already have account !"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/sbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/pink"
        android:padding="10dp"
        android:text="login"
        android:layout_gravity="center_horizontal"
        />

</LinearLayout>